
@section Styles{
    <style>
        .title {
            border-bottom: solid 1px navy;
            color: navy;
            font-size: 20px;
            font-weight: bold;
            padding: 15px 18px;
        }

        .subTitle {
            background-color: #eff4fa;
            border-bottom: 1px solid white;
            color: navy;
            font-size: 16px;
            padding: 20px 18px;
        }

        .dvMhomeContainer .container {
            background-color: #eff4fa;
            padding: 30px 20px;
        }

            .dvMhomeContainer .container label {
                display: block;
                font-size: 14px;
                margin: 0 0 10px 0;
            }

           .dvMhomeContainer .container input {
                font-size: 14px;
                min-height: 25px;
                width: 97%;
                padding: 0 3px;
            }

        .requiredMsg {
            color: #9da0a5;
            font-size: 12px;
            font-style: italic;
            margin-top: 4px;
            text-align: right;
        }

        .submitReview {
            background-color: #1b2560;
            color: #ffffff;
            cursor: pointer;
            font: 18px arial;
            margin-top: 40px;
            padding: 12px 0;
            text-align: center;
            width: 100%;
        }

            .submitReview::after {
                content: "\00a0\203A";
                float: right;
                font-size: 28px;
                margin-right: 10px;
                position: relative;
                top: -8px;
                clear: both;
            }
    </style>
}
<div>
    <div class="title">Review Center</div>
    <div class="subTitle">Share your thoughts with other travelers</div>
    <div class="container">
        <label for="bookingId">Booking Number:</label>
        <input id="bookingId" type="text" />
        <div class="requiredMsg" id="bookingMsg">This field is required</div>

        <label for="email">Email Address:</label>
        <input id="email" type="text" />
        <div class="requiredMsg" id="emailMsg">This field is required</div>

        <span id="nobookMsg" style="color:Red;display:none;font-style:italic;margin-top:8px;">Please verify the booking number and the email address.</span>
        <div id="CheckBooking" class="submitReview">Continue</div>
    </div>
</div>

@section Scripts{
    <environment include="Development">
        <script src="~/js/checkbookingforreview/dt.java.checkbookingforreview.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/checkbookingforreview/dt.java.checkbookingforreview.min.js"></script>
    </environment>
}

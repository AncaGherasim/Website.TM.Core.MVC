@section Styles{ 
    <environment include="Development">
        <link href="~/css/checkbookingforreview/dt.style.checkbookreview.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/css/checkbookingforreview/dt.style.checkbookreview.min.css" rel="stylesheet" />
    </environment>
}

<section class="dvpagecontainer">
    <div class="dvRoundContainer">
        <div style="padding:15px 0px;margin:0px 10px; border-bottom:solid 1px navy;font-size:18px;font-weight:bold;color:navy;">Review Center</div>
        <div style="background-color:#eff4fa;margin:20px 10px 0px 10px;">
            <div style="color:navy;font-size:14px;padding:20px 0px 15px 15px;">Share your thoughts with other travelers</div>
        </div>
        <div style="background-color:#eff4fa;margin:1px 10px;padding:30px 0 20px 0;">
            <div class="leftColumn">
                <span>Booking Number:</span>
                <input id="bookingId" type="text" />
                <span class="errMsg" id="bookingMsg">This field is required</span>
            </div>
            <div class="leftColumn">
                <span>Email Address:</span>
                <input id="email" type="text" />
                <span class="errMsg" id="emailMsg">This field is required</span>
            </div>
            <span id="nobookMsg" style="color:Red;display:none;font-style:italic;margin-left:15px;">Please verify the booking number and the email address.</span>
            <div style="text-align:right;padding:25px 15px 0 0;">
                <span class="submitButton" id="CheckBooking">Continue<span>&rsaquo;</span></span>
            </div>
        </div>
        <div style="padding:10px 0px;margin:0px 10px; border-bottom:solid 1px navy;"></div>
        <div style="margin:10px;">For all your trip planning needs to almost anywhere in the world, use: <a href="http://www.tripmasters.com/">TripMasters.com</a> </div>
    </div>
</section>

@section Scripts{ 
    <environment include="Development">
        <script src="~/js/checkbookingforreview/dt.java.checkbookingforreview.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/checkbookingforreview/dt.java.checkbookingforreview.min.js"></script>
    </environment>
}
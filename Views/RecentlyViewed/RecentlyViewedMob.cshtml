@model MVC_TM.Models.ViewModels.RecentlyViewedViewModel;
@using MVC_TM.Infrastructure;
@using Microsoft.Extensions.Options
@inject IOptionsMonitor<AppSettings> _appsettings

@{
    ViewBag.Canonical = @String.Format("https://www.tripmasters.com/recently_viewed");

}

@section Styles{
    <environment include="Development">
        <link rel="stylesheet" href="~/css/recently_m/mb.style.recentlyviewed.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/recently_m/mb.style.recentlyviewed.min.css" />
    </environment>
}
<div class="row dvRoundContainer" style="margin-top:18px;">
    <div class="col-12 dvViewTitle pt-2 pb-2 text-white">Recently Viewed <span class=" badge badge-warning" id="novisited"></span></div>
</div>

@section Scripts
{
    <environment include="Development">
        <script src="~/js/recently_m/mb.java.recentlyviewed.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/recently_m/mb.java.recentlyviewed.min.js" asp-append-version="true"></script>
    </environment>
}

                            .spanh2Pay,.spanh2Insurance, .spanh2Insurance2, .spanh2Insurance3, .spanh2Insurance4{display:table-cell;vertical-align:middle;transform: rotate( 90deg);font-size: 20px;font-weight: bold;}
                            .span1 {display:table-cell;vertical-align:middle;}
